# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for Python files
*.py text eol=lf

# Force LF line endings for shell scripts
*.sh text eol=lf

# Force LF line endings for configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf

# Force LF line endings for documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files should not be modified
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary 
